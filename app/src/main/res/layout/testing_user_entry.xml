<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f3f3f3"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order"
        android:layout_marginBottom="52.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"
                android:gravity="bottom" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingTop="12dp">


                <!--****NAME TEXT****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Information"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your first and last name"
                        android:textColor="#c3c3c3" />
                </LinearLayout>


                <!--****Your name TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_information"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>


                </LinearLayout>


                <!--****CARD TEXT****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <TextView
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.9"
                            android:text="Facility"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/card2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="The long number on your card"
                            android:textColor="#c3c3c3" />
                    </LinearLayout>
                </LinearLayout>


                <!--****CARD NO.****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_facilty"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>
                </LinearLayout>


                ****CVV****
                <!--****CITY AND STATE****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Availability"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Cost"
                        android:textColor="#333333" />
                </LinearLayout>


                <!--****CITY AND STATE   TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_availability"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_cost"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****Your name TEXT****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView

                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Short Description"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your first and last name"
                        android:textColor="#c3c3c3" />
                </LinearLayout>


                <!--****Your name TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_description"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Looking for"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your first and last name"
                        android:textColor="#c3c3c3" />
                </LinearLayout>


                <!--****Your name TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_lookingFor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>

                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Negotiation"
                        android:textColor="#333333" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Room Type"
                        android:textColor="#333333" />

                </LinearLayout>


                <!--****CITY AND STATE   TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_create_room_negotation"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText

                            android:id="@+id/et_room_type"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>


                </LinearLayout>


                <!--****DATE****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <TextView
                            android:id="@+id/date1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.5"
                            android:text="Phone"
                            android:textColor="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****CALENDAR****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_phone"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:hint="Enter Phone number"
                            android:inputType="number"
                            android:onClick="setDate"
                            android:padding="7dp"
                            android:textColor="#333333"


                            />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="31dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dad8d8"
                            android:gravity="bottom" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.5"
                            android:entries="@array/entries_spinner_create_user"
                            android:text="ADDRESS LINE 1"
                            android:textColor="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ADDRESS 1****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <TextView
                            android:id="@+id/addL1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.5"
                            android:text="ADDRESS LINE 1"
                            android:textColor="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ADDRESS LINE 1 FIELD****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical"

                        >

                        <EditText
                            android:id="@+id/et_room_addressone"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ADDRESS 2****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <TextView
                            android:id="@+id/addL3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.5"
                            android:text="ADDRESS LINE 2"
                            android:textColor="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ADDRESS LINE 2 FIELD****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical"

                        >

                        <EditText
                            android:id="@+id/et_room_addresssecond"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****CITY AND STATE****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/city1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CITY"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/state1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="STATE"
                        android:textColor="#333333" />
                </LinearLayout>


                <!--****CITY AND STATE   TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_city"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_room_state"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:textColorHint="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ZIPCODE AND COUNTRY****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
