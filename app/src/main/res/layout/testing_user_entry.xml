                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/cou1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="COUNTRY"
                        android:textColor="#333333" />
                </LinearLayout>


                <!--****ZIPCODE AND COUNTRY TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
