<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="160dp"
    android:paddingBottom="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recyclerview_text_shape"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/first" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|right"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|left"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#ff9a9dac" />

        <TextView
            android:id="@+id/tv_shortInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Short Information"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:text="Cost"
            android:textColor="#999999"
            android:textSize="14sp" />

            <TextView
                android:id="@+id/rcy_tv_cost"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:text="1000/-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:text="For:"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rcy_tv_for"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:text="Ladies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:text="Facility:"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rcy_tv_facility"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:text="Water,Fan,Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <TextView
            android:id="@+id/tv_moreInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="more ...."
            android:textSize="12sp" />


    </LinearLayout>


</android.support.v7.widget.CardView>
